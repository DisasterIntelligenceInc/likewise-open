#!/usr/bin/make -f

# This has to be exported to make some magic below work.
export DH_OPTIONS

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# Set the host and build architectures for use with config.cache loading,
# cross-building, etc.
DEB_HOST_GNU_TYPE	:= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE	:= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)
DEB_HOST_ARCH_OS	:= $(shell dpkg-architecture -qDEB_HOST_ARCH_OS)

export DEB_HOST_GNU_TYPE
export DEB_BUILD_GNU_TYPE
export DEB_HOST_ARCH_OS
pyversio := $(shell pyversions -vd)

CFLAGS = -g -Wall

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
  CFLAGS += -O0
else
  CFLAGS += -O2
endif

#include /usr/share/quilt/quilt.make

DESTDIR=`pwd`/debian/tmp
PKGNAME=likewise-open
PREFIX=/usr

conf_args = --with-fhs \
	--enable-shared \
	--enable-static \
	--disable-pie \
	--prefix=$(PREFIX) \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--with-configdir=/etc/samba \
	--with-libdir=$(PREFIX)/lib/$(PKGNAME) \
	--with-lockdir=/var/lib/$(PKGNAME) \
	--with-logfilebase=/var/log/$(PKGNAME) \
	--with-mandir=/usr/share/man \
	--with-piddir=/var/run \
	--with-privatedir=/etc/samba \
	--with-pammodulesdir=/lib/security \
	--with-ads \
	--without-readline --with-included-popt --with-included-iniparser \
	--with-dnsupdate \
	--with-pam  \
	--with-shared-modules=idmap_lwopen

ifeq ($(DEB_BUILD_GNU_TYPE), $(DEB_HOST_GNU_TYPE))
  conf_args += --build $(DEB_BUILD_GNU_TYPE)
else
  conf_args += --build $(DEB_BUILD_GNU_TYPE) --host $(DEB_HOST_GNU_TYPE)
endif

CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

configure: configure-stamp
configure-stamp:
	dh_testdir

	./autogen.sh
	./Configure.sh $(conf_args)

	touch configure-stamp

build: build-stamp

build-stamp: configure-stamp
	dh_testdir

	$(MAKE) SCRIPTDIR=/usr/bin all

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	$(MAKE) clean

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
#	dh_installdirs -P $(DESTDIR)
	dh_installdirs

	$(MAKE) DESTDIR=$(DESTDIR) PREFIX=$(PREFIX) install


	mkdir -p $(DESTDIR)/usr/lib/
	mv $(DESTDIR)/$(PREFIX)/lib/likewise-open/libwbclient.so $(DESTDIR)/$(PREFIX)/lib/likewise-open/libwbclient.so.0.1
	ln -s libwbclient.so.0.1 $(DESTDIR)/$(PREFIX)/lib/likewise-open/libwbclient.so.0
	ln -s libwbclient.so.0.1 $(DESTDIR)/$(PREFIX)/lib/likewise-open/libwbclient.so
	(cd $(DESTDIR)/usr/lib && ln -s likewise-open/libwbclient.so.0 libwbclient.so.0)



	install --mode=755 winbindd/source/nsswitch/libnss_lwidentity.so $(DESTDIR)/lib/libnss_lwidentity.so.2

	ln -s libnss_lwidentity.so.2 $(DESTDIR)/lib/libnss_lwidentity.so

	mkdir -p $(DESTDIR)/usr/share/perl5/likewise-open/

	for file in CenterisPam.pm Centeris.pm; do \
		install -D --mode=0644 domainjoin/scripts/$$file $(DESTDIR)/usr/share/perl5/likewise-open/; \
	done

	for file in ConfigureKrb5 ConfigureLogin ConfigurePamForADLogin ConfigureShellPrompt \
		ConfigureSshForGssapi gpcron; \
	do \
		install --mode=0755 domainjoin/scripts/$$file $(DESTDIR)/usr/bin/; \
	done

	install -D --mode=0644 debian/lwiauthd.conf $(DESTDIR)/etc/samba/lwiauthd.conf

	install -D --mode=0644 debian/pam_lwidentity.conf $(DESTDIR)/etc/security/pam_lwidentity.conf
#	install --mode=0644 debian/likewise-open-default $(DESTDIR)/etc/defaults/likewise-open

	dh_install --sourcedir=$(DESTDIR) --list-missing



# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_perl
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps -ldebian/likewise-open/usr/lib/likewise-open
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
