SHELL = /bin/sh
VPATH = @srcdir@/..

subdirs=common server test

compatlibdirs=
top_srcdir = @top_srcdir@
srcdir = @srcdir@
ntlm_srcdir = ${srcdir}
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = $(exec_prefix)/bin
infodir = $(prefix)/info
libdir = @libdir@
libdir = $(libdir)/gnudl
mandir = $(prefix)/man/man1

CC = @CC@
CPPFLAGS = @CPPFLAGS@
CPPFLAGS += -DDEBUG_SUPPORT
CFLAGS = $(CPPFLAGS) @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
INSTALL = @INSTALL@

all:
	@for dir in ${subdirs}; do \
	  (cd $$dir && $(MAKE) DESTDIR=$(DESTDIR) all) \
	  || case "$(MFLAGS)" in *k*) fail=yes;; *) exit 1;; esac; \
	done && test -z "$$fail"

compat:
	@for dir in ${compatlibdirs}; do \
	  (cd $$dir && $(MAKE) DESTDIR=$(DESTDIR) all) \
	  || case "$(MFLAGS)" in *k*) fail=yes;; *) exit 1;; esac; \
	done && test -z "$$fail"

install:
	@for dir in ${subdirs}; do \
	  (cd $$dir && $(MAKE) DESTDIR=$(DESTDIR) install) \
	  || case "$(MFLAGS)" in *k*) fail=yes;; *) exit 1;; esac; \
	done && test -z "$$fail"
	
package: DESTDIR="$(shell pwd)/dist"
package: install
	@for dir in ${pkg_subdirs}; do \
	  (cd $$dir && $(MAKE) DESTDIR=$(DESTDIR) package) \
	  || case "$(MFLAGS)" in *k*) fail=yes;; *) exit 1;; esac; \
	done && test -z "$$fail"
	
clean:
	/bin/rm -rf dist *~
	@for dir in ${subdirs}; do \
	  (cd $$dir && $(MAKE) DESTDIR=$(DESTDIR) clean) \
	  || case "$(MFLAGS)" in *k*) fail=yes;; *) exit 1;; esac; \
	done && test -z "$$fail"

distclean: clean
	@for dir in ${subdirs}; do \
	  (cd $$dir && $(MAKE) DESTDIR=$(DESTDIR) distclean) \
	  || case "$(MFLAGS)" in *k*) fail=yes;; *) exit 1;; esac; \
	done && test -z "$$fail"
	/bin/rm -rf Makefile config.h config.status config.cache config.log configure autom4te.cache stamp-h

