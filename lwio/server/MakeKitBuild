DRIVERS="rdr npfs pvfs srv"
SUBDIRS="iomgr smbcommon $DRIVERS lwiod srvstat"

configure()
{
    for _driver in ${DRIVERS}
    do
        lwio_driver_enabled "$_driver" || mk_skip_subdir "$_driver"
    done

    if [ "${LWIO_SRVSTAT_ENABLED}" != "yes" ]
    then
        mk_skip_subdir srvstat
    fi
}
