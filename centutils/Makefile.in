SHELL = /bin/sh
VPATH = @srcdir@

subdirs=libgpglib libcentutils @TEST_SUBDIR@ 
compatlibdirs=libgpglib libcentutils
hpuxcompatlibdirs=libgpglib libcentutils
top_srcdir = @top_srcdir@
srcdir = @srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = $(exec_prefix)/bin
infodir = $(prefix)/info
libdir = $(prefix)/lib/gnudl
mandir = $(prefix)/man/man1

CC = @CC@
CPPFLAGS = @CPPFLAGS@
CFLAGS = $(CPPFLAGS) @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
INSTALL = @INSTALL@

.PHONY : all hpuxcompat compat install clean distclean

all: libcentutils/config/config.h
	echo doing all
	@for dir in ${subdirs}; do \
	  (cd $$dir && $(MAKE) DESTDIR=$(DESTDIR) all) \
	  || case "$(MFLAGS)" in *k*) fail=yes;; *) exit 1;; esac; \
	done && test -z "$$fail"

#use a config subdirectory so that the file doesn't accidentally get
#installed
libcentutils/config/config.h:
	mkdir -p libcentutils/config
	cp include/config.h libcentutils/config/config.h

hpuxcompat: libcentutils/config/config.h
	@for dir in ${hpuxcompatlibdirs}; do \
	  (cd $$dir && $(MAKE) DESTDIR=$(DESTDIR) all) \
	  || case "$(MFLAGS)" in *k*) fail=yes;; *) exit 1;; esac; \
	done && test -z "$$fail"

compat: hpuxcompat
	@for dir in ${compatlibdirs}; do \
	  (cd $$dir && $(MAKE) DESTDIR=$(DESTDIR) all) \
	  || case "$(MFLAGS)" in *k*) fail=yes;; *) exit 1;; esac; \
	done && test -z "$$fail"

install: libcentutils/config/config.h
	@for dir in ${subdirs}; do \
	  (cd $$dir && $(MAKE) DESTDIR=$(DESTDIR) install) \
	  || case "$(MFLAGS)" in *k*) fail=yes;; *) exit 1;; esac; \
	done && test -z "$$fail"
clean:
	/bin/rm -f *~
	@for dir in ${subdirs}; do \
	  (cd $$dir && $(MAKE) DESTDIR=$(DESTDIR) clean) \
	  || case "$(MFLAGS)" in *k*) fail=yes;; *) exit 1;; esac; \
	done && test -z "$$fail"

distclean: clean
	@for dir in ${subdirs}; do \
	  (cd $$dir && $(MAKE) DESTDIR=$(DESTDIR) distclean) \
	  || case "$(MFLAGS)" in *k*) fail=yes;; *) exit 1;; esac; \
	done && test -z "$$fail"
	/bin/rm -f Makefile config.h config.status config.cache config.log configure
