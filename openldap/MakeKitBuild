make()
{
    mk_autotools \
        HEADERS='ldap.h' \
        LIBS='ldap ldap_r' \
        HEADERDEPS="gssapi.h sasl/sasl.h" \
        LIBDEPS="gssapi_krb5 sasl2" \
        CPPFLAGS="-D_REENTRANT -DLDAP_CONNECTIONLESS -D_GNU_SOURCE -D_AVL_H" \
        CFLAGS="-fPIC" \
        --disable-static \
        --enable-shared \
        --without-kerberos \
        --disable-slapd \
        --disable-slurpd \
        --without-tls
}