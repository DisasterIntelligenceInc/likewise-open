make()
{
    API_SOURCES="\
       api2.c          \
       artefacts.c     \
       auth.c          \
       auth_provider.c \
       config.c        \
       credentials.c   \
       globals.c       \
       ipc_dispatch.c  \
       ipc_error.c     \
       ipc_state.c     \
       lsacfg_reg.c    \
       lsatime.c       \
       machinepwdinfo.c \
       metrics.c       \
       pam.c           \
       provider.c      \
       session.c       \
       state.c         \
       status.c        \
       systemcache.c   \
       traceinfo.c     \
       tracing.c       \
       rpc_server.c    \
       svc_register.c  \
       svc_unregister.c \
       parse_name.c    \
       svc_listen.c"

    API_HEADERDEPS="lwmsg/lwmsg.h lwadvapi.h dce/rpc.h"

    if [ "$HAVE_LIB_EVENTLOG" != "no" -a "$HAVE_EVENTLOG_H" != "no"  -a "$LW_DEVICE_PROFILE" != "embedded" ]
    then
        API_SOURCES="$API_SOURCES event.c lsaevent.c"
        API_HEADERDEPS="$API_HEADERDEPS eventlog.h eventlog-record.h"
    fi

    mk_library \
	LIB=lsaserverapi \
	SOURCES="$API_SOURCES" \
	GROUPS="../privilege/privilege" \
	CPPFLAGS="-DLW_ENABLE_THREADS" \
	INCLUDEDIRS=". ../include ../../include" \
	HEADERDEPS="$API_HEADERDEPS" \
	LIBDEPS="uuid lwadvapi_nothr lsacommon $LIB_EVENTLOG $LIB_PTHREAD $LIB_RT"
}
