SHELL = /bin/sh
VPATH = @srcdir@

subdirs=libdomainjoin/src         \
        domainjoin-cli/src        \
        @GTK_SUBDIR@              \
        @LIBDOMAINJOINMAC_SUBDIR@ \
        tests

compatlibdirs=libdomainjoin/src
top_srcdir = @top_srcdir@
srcdir = @srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
infodir = @infodir@
libdir = @libdir@
mandir = @mandir@/man1
libexecdir = @libexecdir@

CC = @CC@
CPPFLAGS = @CPPFLAGS@
CFLAGS = $(CPPFLAGS) @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
INSTALL = @INSTALL@

all:
	@for dir in ${subdirs}; do \
	  (cd $$dir && $(MAKE) DESTDIR=$(DESTDIR) all) \
	  || case "$(MFLAGS)" in *k*) fail=yes;; *) exit 1;; esac; \
	done && test -z "$$fail"

compat:
	@for dir in ${compatlibdirs}; do \
	  (cd $$dir && $(MAKE) DESTDIR=$(DESTDIR) all) \
	  || case "$(MFLAGS)" in *k*) fail=yes;; *) exit 1;; esac; \
	done && test -z "$$fail"

install:
	@for dir in ${subdirs}; do \
	  (cd $$dir && $(MAKE) DESTDIR=$(DESTDIR) install) \
	  || case "$(MFLAGS)" in *k*) fail=yes;; *) exit 1;; esac; \
	done && test -z "$$fail"
clean:
	/bin/rm -f *~
	@for dir in ${subdirs}; do \
	  (cd $$dir && $(MAKE) DESTDIR=$(DESTDIR) clean) \
	  || case "$(MFLAGS)" in *k*) fail=yes;; *) exit 1;; esac; \
	done && test -z "$$fail"

distclean: clean
	@for dir in ${subdirs}; do \
	  (cd $$dir && $(MAKE) DESTDIR=$(DESTDIR) distclean) \
	  || case "$(MFLAGS)" in *k*) fail=yes;; *) exit 1;; esac; \
	done && test -z "$$fail"
	/bin/rm -f Makefile config.h config.status config.cache config.log

