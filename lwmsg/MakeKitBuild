SUBDIRS='include src test'

configure()
{
    mk_config_header "include/config.h"

    lw_define_feature_macros

    mk_multiarch_do
        MK_CFLAGS="$MK_CFLAGS -Wall -Werror"
    mk_multiarch_done

    mk_check_headers \
        string.h \
        strings.h \
        sys/types.h \
        sys/socket.h \
        sys/varargs.h \
        sys/select.h

    mk_check_libraries FAIL=yes \
        lwbase lwbase_nothr

    mk_check_libraries \
        pthread rt dl xnet

    lw_check_iconv

    mk_multiarch_do
        mk_define "MOD_EXT" "${MK_DLO_EXT}"
    mk_multiarch_done
}