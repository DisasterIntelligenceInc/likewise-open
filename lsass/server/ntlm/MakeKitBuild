make()
{
    NTLM_SOURCES="\
	acceptsecctxt.c \
	acquirecreds.c \
	context.c \
	crc32.c \
	credentials.c \
	decryptmsg.c \
	delsecctxt.c \
	encryptmsg.c \
	exportsecctxt.c \
	freecreds.c \
	globals.c \
	importsecctxt.c \
	initsecctxt.c \
	ipc_dispatch.c \
	makesign.c \
	querycreds.c \
	queryctxt.c \
	cfg.c \
	verifysign.c"

    mk_library \
	LIB=ntlmserver \
	SOURCES="$NTLM_SOURCES" \
	INCLUDEDIRS=". ../include ../../include" \
	HEADERDEPS="openssl/md5.h lwadvapi.h lwps/lwps.h wc16str.h uuid/uuid.h lwio/lwio.h" \
	LIBDEPS="lsacommon lsarpc lwmsg lwpsapi crypto krb5 lwadvapi"
}