make()
{
    if [ "$MK_BINDIR" = "/usr/bin" -o "$MK_BINDIR" = "/usr/local/bin" ]
    then
        PASSWD_NAME="lw-passwd"
    else
        PASSWD_NAME="passwd"
    fi

    mk_program \
        PROGRAM="$PASSWD_NAME" \
        SOURCES="main.c" \
        INCLUDEDIRS="../../include" \
        LIBDEPS="pam lsaclient lwadvapi"
}