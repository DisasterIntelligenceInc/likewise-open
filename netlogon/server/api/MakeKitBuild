make()
{
    API_SOURCES="\
       globals.c          \
       lwnet-server-cfg.c \
       lwnet-krb5.c       \
       lwnet-cachedb.c    \
       lwnet-pstore.c     \
       lwnet-plugin.c     \
       dcinfo.c           \
       event.c            \
       lwnet.c            \
       state.c"

    mk_group \
        GROUP=api.og \
        SOURCES="$API_SOURCES" \
        INCLUDEDIRS=". ../include ../../include" \
        HEADERDEPS="reg/lwreg.h reg/regutil.h lwmsg/lwmsg.h lwadvapi.h lwps/lwps.h" \
        LIBDEPS="regclient rsutils lwmsg lwadvapi lwpsapi ldap_r $LIB_PTHREAD $LIB_DL"
}
