make()
{
    UTILS_SOURCES="\
	fileutils.c  \
	globals.c    \
	hostinfo.c   \
	memory.c     \
	strings.c    \
	sysfuncs.c"

    mk_library \
	LIB=srvsvcutils \
	SOURCES="$UTILS_SOURCES" \
	CPPFLAGS="-DSRVSVC_BUILD" \
	INCLUDEDIRS=". ../include" \
	HEADERDEPS="lwadvapi.h wc16str.h lw/base.h dce/rpc.h lwio/lwio.h" \
	LIBDEPS="dcerpc lwbase lwadvapi"
}